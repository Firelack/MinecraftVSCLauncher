{
  "name": "minecraft-vsc-launcher",
  "displayName": "Minecraft Launcher Button",
  "description": "Just a simple button to start minecraft client or build the project if it's a Gradle project.",
  "version": "1.1.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "icon": "media/icon_512px.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Firelack/MinecraftVSCLauncher.git"
  },
  "author": {
    "name": "Firelack",
    "url": "https://github.com/Firelack"
  },
  "publisher": "Firelack",
  "categories": ["Other"],
  "activationEvents": [
    "workspaceContains:gradle.properties",
    "workspaceContains:build.gradle",
    "onCommand:extension.runMinecraftClient",
    "onCommand:extension.buildMinecraftProject",
    "onCommand:extension.buildAndRunMinecraft",
    "onCommand:extension.showMinecraftMenu"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runMinecraftClient",
        "title": "Run Minecraft Client",
        "icon": {
          "light": "media/icon_512px.png",
          "dark": "media/icon_512px.png"
        }
      },
      {
        "command": "extension.buildMinecraftProject",
        "title": "Build Minecraft Project",
        "icon": {
          "light": "media/build_512px.png",
          "dark": "media/build_512px.png"
        }
      },
      {
        "command": "extension.buildAndRunMinecraft",
        "title": "Build + Run Minecraft Project",
        "icon": {
          "light": "media/build_run_light.svg",
          "dark": "media/build_run_dark.svg"
        }
      },
      {
        "command": "extension.showMinecraftMenu",
        "title": "More Minecraft Actions",
        "icon": {
          "light": "media/black_more.svg",
          "dark": "media/white_more.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.runMinecraftClient",
          "when": "minecraft.isGradleProject",
          "group": "navigation"
        },
        {
          "command": "extension.buildMinecraftProject",
          "when": "minecraft.isGradleProject",
          "group": "navigation"
        },
        {
          "command": "extension.buildAndRunMinecraft",
          "when": "minecraft.isGradleProject",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "extension.runMinecraftClient",
          "when": "minecraft.isGradleProject",
          "group": "navigation@1"
        },
        {
          "command": "extension.showMinecraftMenu",
          "when": "minecraft.isGradleProject",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {},
  "devDependencies": {}
}
